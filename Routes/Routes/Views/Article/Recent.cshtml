@{
    Layout = null;
}
@model Routes.Models.RecentDataModel

<div class="posts-wrap">
    <h3>Recent Posts</h3>
    <ul>
        @foreach (var item in Model.Items)
        {
            <li>
                <p class="date">@item.Date.ToString("D")</p>
                <p class="post">
                    @Html.ActionLink(item.Text, "GetByUrl", "Article", new { seoUrl = item.ID }, null)
                </p>
            </li>
        }
    </ul>
</div>